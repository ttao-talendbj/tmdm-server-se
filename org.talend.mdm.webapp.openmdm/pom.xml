<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.talend.mdm</groupId>
        <artifactId>mdm-base</artifactId>
        <version>7.1.1-M4</version>
        <relativePath>../../tmdm-common/org.talend.mdm.base/pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.talend.mdm.webapp.openmdm</artifactId>
    <name>org.talend.mdm.webapp.openmdm</name>
    <packaging>war</packaging>

    <dependencies>
        <!-- SE war dependencies -->
        <!-- pom dependency to the war must be declared to get transitive dependencies on the classpath (see http://jira.codehaus.org/browse/MWAR-253) -->
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.webapp.core</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.webapp.core</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.webapp.general</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.webapp.general</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.webapp.welcomeportal</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.webapp.welcomeportal</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.webapp.browserecords</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.webapp.browserecords</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.webapp.recyclebin</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.webapp.recyclebin</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.webapp.journal</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.webapp.journal</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>
        <!-- SE lib dependencies -->
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.core</artifactId>
            <version>${project.version}</version>
            <classifier>open</classifier>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.core.storage.sql</artifactId>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.ext.publish.component</artifactId>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.core.plugin.base</artifactId>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.calljob.plugin</artifactId>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.service.calljob</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.service.calltransformer</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.service.dumptoconsole</artifactId>
            <version>${project.version}</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.talend.mdm</groupId>
                <artifactId>license-plugin</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <id>check-licenses</id>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <configuration>
                            <failOnMissingLicense>false</failOnMissingLicense>
                            <excludedArtifacts>
                                <excludedArtifact>org.talend</excludedArtifact>
                            </excludedArtifacts>
                            <additionalArtifacts>
                                <additionalArtifact>org.apache.tomcat:tomcat:zip::9.0.10</additionalArtifact>
                                <additionalArtifact>yui:yui:javascript::2.4.0</additionalArtifact>
                                <additionalArtifact>simile:timeline:javascript::2.3.0</additionalArtifact>
                                <additionalArtifact>googleapis:fonts:font::1.1</additionalArtifact>
                            </additionalArtifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
    <profiles>
    	<profile>
            <id>dev-build</id>
            <build>
            	<plugins>
            		<plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                        	<execution>
                                <id>deploy-tomcat</id>
                                <configuration>
                                	<target>
                                		<copy tofile="${lib.dest}" file="${web.lib.src}" />
                                	</target>
                                </configuration>
                            </execution>
                        </executions>
                     </plugin>
                </plugins>
            </build>
        </profile>
        <!-- Used to install entire talendmdm ce-->
        <profile>
            <id>dev-install-war</id>
            <build>
            	<plugins>
            		<plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                        	<execution>
                        		<phase>install</phase>
                                <configuration>
                                	<target>
                                		<delete dir="${mdm.app.dir}" />
                                		<copy todir="${mdm.app.dir}">
                                			<fileset dir="${mdm.build.web.dir}" />
                                		</copy>
                                	</target>
                                </configuration>
                                <goals>
                                	<goal>run</goal>
                                </goals>
                            </execution>                           
                        </executions>
                     </plugin>
                </plugins>
            </build>
		</profile>
     </profiles>
   
</project>
